<!doctype html>
<html lang = "en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" 
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.11.0/underscore-min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
  </head>
<body>
    <!--Navigation bar (log in, sign up, log out, search)-->
    <%- include('./partials/nav.ejs') %>

    <div class = "row">
        <div class="col text-center">
			<!-- name -->
			<h3><%=item[0].name%></h3>  
			<!-- Image -->
            <img src="/img/beer_test_img.jpg" class="img-fluid" alt="Responsive image">
        </div>
    
        <div class="col">
			</br></br>
			<!-- description -->
			<p> <%=item[0].description%> </p>
			<!-- price -->  
            <div id = "price" data-price = "<%=item[0].price%>">
                <p>Price: $<%=item[0].price%></p>
			</div>
			<!-- quantity -->
            <div class="input-group">
                <input type="number" id = "qty" name="quant[1]" value="1" min="1" max="50">
                <button id = "addToCart">Add To Cart</button>
            </div>  
            <div id = "successAlert" class="alert alert-success" role="alert" style = "display: none;">
                Added to Cart!
            </div>
        </div>
    </div>

    <%- include('./partials/footer.ejs') %>

    <script>
        $(document).ready(function(){
            // getting data from db
            let product = {
                name: "<%=item[0].name%>",
                description: "<%=item[0].description%>",
                price: "<%=item[0].price%>",
                quantity: "<%=item[0].quantity%>"
            };
            // getting number of items
            var quantity = $("#qty").val();
            quantity = parseInt(quantity);
            
            // calculating end total based on price and quantity 
            function calcPrice(p, q) {
                return p * q;
            }
            // change quantity
            $("#qty").change(function(event){
                event.preventDefault();
                // alert($("#qty").val());
                $.ajax({
                    url: "./<%=item[0].name%>",
                    type: "GET",
                    contentType: "json",
                    data: "",
                    success: function () {
                        quantity = $("#qty").val();
                        quantity = parseInt(quantity);
                        var newPrice = calcPrice(product.price, quantity);
                        $("#price").html("Price: $" + newPrice);
                        console.log(newPrice);
                        console.log(quantity);
                    },
                    error: function (request, error) {
                        alert("Request: " + JSON.stringify(error));
                    }
                });
            });
            // click 'add to cart' button
            $("#addToCart").on('click', function(){
                console.log("Add to cart");
                quantity = parseInt(quantity);
                console.log(quantity);
                // overall items in cart
                let numItems = localStorage.getItem('items');
                numItems = parseInt(numItems);
                console.log(numItems);
                // if number > 0
                if( numItems ){
                    // increase total by current quantity
                    let addUp = parseInt(parseInt(numItems) + parseInt(quantity));
                    localStorage.setItem('items', addUp);
                } else {
                    localStorage.setItem('items', quantity);
                }

                $("#successAlert").show();
                // quantity of single item
                setItems(product);

            });

            function setItems(product){
                let cartItems = localStorage.getItem('productsInCart');
                cartItems = JSON.parse(cartItems);

                quantity = parseInt(quantity);

                console.log(cartItems);
                console.log(product);
                console.log(quantity);
                // if cart has things in it
                if(cartItems != null){
                    // adding new item to cart if cart is not empty
                    if(cartItems[product.name] == undefined){
                        cartItems = {
                            ...cartItems,
                            [product.name]: product
                        };
                    }
                    let cartItemsQuantity = parseInt(cartItems[product.name].quantity)
                    cartItemsQuantity += parseInt(quantity);
                    cartItems[product.name].quantity = parseInt(cartItemsQuantity);
                } else { // if cart is empty, add first item
                    product.quantity = quantity;
                    cartItems = {
                        [product.name]: product
                    };
                }

                console.log(cartItems[product.name].quantity);
                
                localStorage.setItem("productsInCart", JSON.stringify(cartItems));

            }
        });
    </script>
    
</body>
</html>